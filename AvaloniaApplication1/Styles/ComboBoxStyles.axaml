<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="100">
            <ComboBox>
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>1</ComboBoxItem>
            </ComboBox>
        </Border>
    </Design.PreviewWith>


    <Style Selector="ComboBox">
        <Setter Property="PlaceholderForeground" Value="White"></Setter>
    </Style>

    <Style Selector="ComboBox:dropdownopen /template/ Border#PopupBorder">
        <Setter Property="Background" Value="{DynamicResource 'Charcoal Blue'}"></Setter>
    </Style>

    <Style Selector="ComboBox.blue">
        <Setter Property="Background" Value="{DynamicResource 'Charcoal Blue'}"></Setter>
        <Setter Property="PlaceholderForeground" Value="White"></Setter>
    </Style>

    <Style Selector="ComboBox.blue:dropdownopen /template/ Border#PopupBorder">
        <Setter Property="Background" Value="{DynamicResource 'Charcoal Blue'}"></Setter>
    </Style>
</Styles>
