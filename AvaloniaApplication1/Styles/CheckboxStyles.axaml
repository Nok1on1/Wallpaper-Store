<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <CheckBox>Check This</CheckBox>
        </Border>
    </Design.PreviewWith>

    <Style Selector="CheckBox">
        <Setter Property="FontFamily" Value="Inria Sans"/>
        <Setter Property="Background" Value="{DynamicResource 'Charcoal Gray'}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="CheckBox:pointerover /template/ ContentPresenter">
        <Setter Property="Foreground" Value="Khaki"/>
    </Style>
</Styles>
