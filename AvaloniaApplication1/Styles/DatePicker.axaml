<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avaloniaApplication1="clr-namespace:AvaloniaApplication1">
    <Design.PreviewWith>
        <Border Padding="300">
            <DatePicker></DatePicker>
        </Border>
    </Design.PreviewWith>

    <Style Selector="DatePickerPresenter">
        <Setter Property="Background" Value="{DynamicResource 'Charcoal Gray'}"></Setter>
    </Style>
    <Style Selector="DatePickerPresenter"></Style>

    <Style Selector="Button#PART_AcceptButton">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <Style Selector="Button#PART_DismissButton">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style Selector="RepeatButton#PART_MonthDownButton">
        <Setter Property="Background" Value="{DynamicResource 'Dark Charcoal'}"/>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    <Style Selector="RepeatButton#PART_YearDownButton">
        <Setter Property="Background" Value="{DynamicResource 'Dark Charcoal'}"/>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    <Style Selector="RepeatButton#PART_DayDownButton">
        <Setter Property="Background" Value="{DynamicResource 'Dark Charcoal'}"/>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    <Style Selector="RepeatButton#PART_MonthUpButton">
        <Setter Property="Background" Value="{DynamicResource 'Dark Charcoal'}"/>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    <Style Selector="RepeatButton#PART_YearUpButton">
        <Setter Property="Background" Value="{DynamicResource 'Dark Charcoal'}"/>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
    <Style Selector="RepeatButton#PART_DayUpButton">
        <Setter Property="Background" Value="{DynamicResource 'Dark Charcoal'}"/>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>

</Styles>
